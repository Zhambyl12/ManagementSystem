@model IEnumerable<ManagementSystem.Models.Electronics>
@using ManagementSystem.Models
@{
    ViewBag.Title = "На рассмотрении";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<!-- =============================================== -->

<div class="content-wrapper">

    <section class="content-header">
        <h1>
            Электроники
            <small>на расмотрении</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Panel", new { area = Misc.CurrentUser.Id })"><i class="fa fa-dashboard"></i> Главное</a></li>
            <li><a href="#">Электроники</a></li>
            <li class="active">Список</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <p>  @Html.ActionLink("Создать заявку", "Create")</p>
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Все электроники</h3>
                        <div class="box-tools">
                            <div class="input-group" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Поиск">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body no-padding">
                        <table class="table table-hover electronics-list">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.SerialNumber)</th>
                                <th>@Html.DisplayNameFor(model => model.Title)</th>
                                <th>@Html.DisplayNameFor(model => model.CPU)</th>
                                <th>@Html.DisplayNameFor(model => model.RAM)</th>
                                <th>@Html.DisplayNameFor(model => model.DiskSize)</th>
                                <th>@Html.DisplayNameFor(model => model.DiskType)</th>
                                <th>@Html.DisplayNameFor(model => model.Video)</th>
                                <th>@Html.DisplayNameFor(model => model.OS)</th>
                                <th></th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SerialNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CPU)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RAM) GB
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiskSize) GB
                                    </td>
                                    <td>
                                        @if (item.DiskType == 1)
                                        {<span>HDD</span> }
                                        else if (item.DiskType == 2)
                                        { <span>SSD</span> }
                                        else
                                        { <span>Не определен</span>}
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Video)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OS)
                                    </td>
                                    <td>
                                        <div class="input-group margin">
                                            <div class="input-group-btn">
                                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">действии <span class="fa fa-caret-down"></span></button>
                                                <ul class="dropdown-menu">
                                                    <li><a href="@Url.Action("Edit", new { id = item.Id })">изменить</a></li>
                                                    <li><a href="@Url.Action("Details", new { id = item.Id })">посмотреть</a></li>
                                                    <li><a href="@Url.Action("Delete", new { id = item.Id })">удалить</a></li>
                                                </ul>
                                            </div>
                                        </div>

                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- =============================================== -->
