@model ManagementSystem.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Забыли пароль?";
    Layout = "../Shared/_AccountLayout.cshtml";
}
<div class="login-box-body">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Введите адрес электронной почты.</h4>
        <div class="form-group has-feedback">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Отправить ссылку по электронной почте</button>
        </div>
    }
</div>

