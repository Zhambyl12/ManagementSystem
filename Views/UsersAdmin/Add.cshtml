@model ManagementSystem.Models.Electronics

@{
    ViewBag.Title = "Добавление электроники";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    List<SelectListItem> selectLists = ViewBag.Users;
}
<!-- =============================================== --> 
<section class="content-wrapper">

    <section class="content-header">
        <h1>
            @ViewBag.Title
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Главное</a></li>
            <li><a href="#">Профиль</a></li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-body">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken() 
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.SerialNumber)
                            @Html.HiddenFor(model => model.Title)
                            @Html.HiddenFor(model => model.CPU)
                            @Html.HiddenFor(model => model.RAM)
                            @Html.HiddenFor(model => model.DiskSize)
                            @Html.HiddenFor(model => model.DiskType)
                            @Html.HiddenFor(model => model.Video)
                            @Html.HiddenFor(model => model.OS)
                        <div class="form-group"> 
                            <label for="UserId">Выберите работника</label>
                            @Html.DropDownListFor(model => model.UserId, selectLists, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                        </div>

                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-success" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
<!-- =============================================== -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
