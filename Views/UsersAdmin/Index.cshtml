@model IEnumerable<ManagementSystem.Models.ApplicationUser>

@{
    ViewBag.Title = "Управление пользователями";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- =============================================== -->

<div class="content-wrapper">

    <section class="content-header">
        <h1>
            Пользователи
            <small>все</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Главное</a></li>
            <li><a href="#">Пользователи</a></li>
            <li class="active">Список</li>
        </ol>
    </section>

    <section class="content">

        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Пользователи</h3>
                <p> @Html.ActionLink("Создать новый", "Create")</p>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                    <button class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body">
                @if (Model != null)
                {
                    <table class="table">
                        <tr>
                            <th>
                                Фото
                            </th>
                            <th>
                                ФИО
                            </th>
                            <th>
                                Отдел
                            </th>
                            <th>
                                Должность
                            </th>
                            <th>
                                Логин
                            </th>
                            <th>
                                
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (string.IsNullOrEmpty(item.Photo))
                                    {
                                        <img src="~/Content/dist/img/no-photo.png" alt="фото @item.GetUserFullname()" class="img-circle" style="height:48px;width:48px;object-fit:cover;" />
                                    }
                                    else
                                    {
                                        <img src="@Url.Content(item.Photo)" alt="фото @item.GetUserFullname()" class="img-circle" style="height:48px;width:48px;object-fit:cover;" />
                                    }

                                </td>
                                <td style="vertical-align:middle;">
                                    @item.GetUserFullname()
                                </td>
                                <td style="vertical-align:middle;">
                                    @Html.DisplayFor(modelItem => item.Department)
                                </td>
                                <td style="vertical-align:middle;">
                                    @Html.DisplayFor(modelItem => item.Position)
                                </td>
                                <td style="vertical-align:middle;">
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td style="vertical-align:middle;"> 
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary btn-xs">изменить</a>
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-success btn-xs">подробнее</a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-xs">удалить</a>
                                </td>
                            </tr>
                        } 
                    </table>
                }
                else
                {
                    <p>Отсутсвует Пользователи</p>
                }
            </div> 
        </div> 
    </section>
</div>

<!-- =============================================== --> 