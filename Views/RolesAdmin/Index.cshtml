@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Роли";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- =============================================== -->

<div class="content-wrapper">

    <section class="content-header">
        <h1>
            Роли
            <small>все</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Главное</a></li>
            <li><a href="#">Роли</a></li>
            <li class="active">Список</li>
        </ol>
    </section>

    <section class="content">

        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Роли</h3>
                <p> @Html.ActionLink("Создать новый", "Create")</p>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                    <button class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body">
                @if (Model != null)
                {
                    <table class="table">
                        <tr>
                            <th>
                                Код
                            </th> 
                            <th>

                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td> 
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary btn-xs">изменить</a>
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-success btn-xs">подробнее</a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-xs">удалить</a>
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <p>Отсутсвует роли</p>
                }
            </div>
            <div class="box-footer">

            </div>
        </div>

    </section>
</div>

<!-- =============================================== --> 